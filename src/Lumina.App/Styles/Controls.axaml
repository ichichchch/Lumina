<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Custom Control Styles -->

    <!-- Primary Button -->
    <Style Selector="Button.Primary">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.18" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.Primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}" />
        <Setter Property="RenderTransform" Value="translate(0px,-1px) scale(1.01)" />
    </Style>

    <Style Selector="Button.Primary:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="Button.Primary:pressed">
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(0.98)" />
    </Style>

    <!-- Secondary Button -->
    <Style Selector="Button.Secondary">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.18" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.Secondary:pointerover">
        <Setter Property="Background" Value="{DynamicResource CardGradientHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
        <Setter Property="RenderTransform" Value="translate(0px,-1px) scale(1.01)" />
    </Style>

    <Style Selector="Button.Secondary:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="Button.Secondary:pressed">
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(0.98)" />
    </Style>

    <!-- Ghost Button -->
    <Style Selector="Button.Ghost">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondary}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <BrushTransition Property="Foreground" Duration="0:0:0.15" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.18" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.Ghost:pointerover">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="RenderTransform" Value="translate(0px,-1px) scale(1.01)" />
    </Style>

    <Style Selector="Button.Ghost:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="Button.Ghost:pressed">
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(0.98)" />
    </Style>

    <!-- Card Style -->
    <Style Selector="Border.Card">
        <Setter Property="Background" Value="{DynamicResource CardGradient}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BoxShadow" Value="{DynamicResource ShadowSmall}" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.22" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.Card:pointerover">
        <Setter Property="Background" Value="{DynamicResource CardGradientHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
        <Setter Property="BoxShadow" Value="{DynamicResource ShadowLarge}" />
        <Setter Property="RenderTransform" Value="translate(0px,-2px) scale(1.01)" />
    </Style>

    <Style Selector="Border.HeroBanner">
        <Setter Property="Background" Value="{DynamicResource HeroBannerGradient}" />
        <Setter Property="BorderBrush" Value="{DynamicResource HeroBannerBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="BoxShadow" Value="{DynamicResource ShadowSmall}" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.18" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.18" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.22" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.HeroBanner:pointerover">
        <Setter Property="Background" Value="{DynamicResource HeroBannerGradientHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource HeroBannerBorderHoverBrush}" />
        <Setter Property="BoxShadow" Value="{DynamicResource ShadowLarge}" />
        <Setter Property="RenderTransform" Value="translate(0px,-1px) scale(1.008)" />
    </Style>

    <Style Selector="Border.HeroBanner Border.HeroBannerShine">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}" />
        <Setter Property="Opacity" Value="0" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(-180px,0px)" />
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#00FFFFFF" Offset="0" />
                <GradientStop Color="#00FFFFFF" Offset="0.42" />
                <GradientStop Color="#26FFFFFF" Offset="0.50" />
                <GradientStop Color="#00FFFFFF" Offset="0.58" />
                <GradientStop Color="#00FFFFFF" Offset="1" />
            </LinearGradientBrush>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.18" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.65" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.HeroBanner:pointerover Border.HeroBannerShine">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="RenderTransform" Value="translate(180px,0px)" />
    </Style>

    <Style Selector="Border.HeroBanner Border.HeroBannerBadge">
        <Setter Property="Background" Value="{DynamicResource HeroBannerBadgeBackground}" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px) scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.18" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.22" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.HeroBanner:pointerover Border.HeroBannerBadge">
        <Setter Property="Background" Value="{DynamicResource HeroBannerBadgeBackgroundHover}" />
        <Setter Property="RenderTransform" Value="translate(0px,-1px) scale(1.03)" />
    </Style>

    <Style Selector="Border.HeroBanner Border.HeroBannerBadge PathIcon">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.22" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.HeroBanner:pointerover Border.HeroBannerBadge PathIcon">
        <Setter Property="RenderTransform" Value="scale(1.06)" />
    </Style>

    <!-- Glass Card -->
    <Style Selector="Border.GlassCard">
        <Setter Property="Background" Value="{DynamicResource GlassBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusLarge}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BoxShadow" Value="{DynamicResource ShadowMedium}" />
    </Style>

    <!-- Navigation Item -->
    <Style Selector="Button.NavItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextMuted}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2" />
                <BrushTransition Property="Foreground" Duration="0:0:0.2" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.NavItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource CardGradientHover}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
        <Setter Property="RenderTransform" Value="scale(1.02)" />
    </Style>

    <Style Selector="Button.NavItem.Active">
        <Setter Property="Background" Value="{DynamicResource CardGradientHover}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    </Style>

    <Style Selector="Button.NavItem:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
    </Style>

    <Style Selector="Button.NavItem:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>

    <Style Selector="Button.NavItem PathIcon">
        <Setter Property="Opacity" Value="0.9" />
    </Style>

    <Style Selector="Button.NavItem:pointerover PathIcon">
        <Setter Property="Opacity" Value="1" />
    </Style>

    <Style Selector="Button.NavItem.Active PathIcon">
        <Setter Property="Opacity" Value="1" />
    </Style>

    <Style Selector="Ellipse.StatusDot">
        <Setter Property="Fill" Value="{DynamicResource StateDisconnectedBrush}" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Fill" Duration="0:0:0.2" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Ellipse.StatusDot.Connecting">
        <Setter Property="Fill" Value="{DynamicResource StateConnectingBrush}" />
    </Style>

    <Style Selector="Ellipse.StatusDot.Connected">
        <Setter Property="Fill" Value="{DynamicResource StateConnectedBrush}" />
    </Style>

    <Style Selector="Ellipse.StatusDot.Error">
        <Setter Property="Fill" Value="{DynamicResource StateErrorBrush}" />
    </Style>

    <!-- TextBox Style -->
    <Style Selector="TextBox.Lumina">
        <Setter Property="Background" Value="{DynamicResource BackgroundTertiary}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="CaretBrush" Value="{DynamicResource AccentBrush}" />
        <Setter Property="SelectionBrush" Value="{DynamicResource AccentBrush}" />
        <Setter Property="FocusAdorner">
            <FocusAdornerTemplate>
                <Border BorderBrush="{DynamicResource BorderFocus}"
                        BorderThickness="2"
                        CornerRadius="{StaticResource RadiusMedium}" />
            </FocusAdornerTemplate>
        </Setter>
    </Style>

    <Style Selector="TextBox.Lumina:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <!-- ComboBox Style -->
    <Style Selector="ComboBox.Lumina">
        <Setter Property="Background" Value="{DynamicResource BackgroundTertiary}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FocusAdorner">
            <FocusAdornerTemplate>
                <Border BorderBrush="{DynamicResource BorderFocus}"
                        BorderThickness="2"
                        CornerRadius="{StaticResource RadiusMedium}" />
            </FocusAdornerTemplate>
        </Setter>
    </Style>

    <Style Selector="ComboBox.Lumina:pointerover">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
    </Style>

    <Style Selector="ComboBox.Lumina:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="ComboBox.Lumina ComboBoxItem">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="12,10" />
    </Style>

    <Style Selector="ComboBox.Lumina ComboBoxItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource BackgroundCardHover}" />
    </Style>

    <Style Selector="ComboBox.Lumina ComboBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
    </Style>

    <Style Selector="ComboBox.Lumina /template/ Popup Border">
        <Setter Property="Background" Value="{DynamicResource BackgroundSecondary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- CheckBox Style -->
    <Style Selector="CheckBox.Lumina">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <ControlTemplate TargetType="CheckBox">
                <Grid ColumnDefinitions="Auto,10,*">
                    <Border Name="Box"
                            Width="20"
                            Height="20"
                            Background="{DynamicResource BackgroundTertiary}"
                            BorderBrush="{DynamicResource BorderDefault}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusSmall}"
                            VerticalAlignment="Center">
                        <Grid>
                            <Path Name="CheckGlyph"
                                  Data="M20 6L9 17l-5-5"
                                  Width="14"
                                  Height="14"
                                  Stretch="Uniform"
                                  Stroke="{StaticResource White}"
                                  StrokeThickness="2.5"
                                  StrokeLineCap="Round"
                                  StrokeJoin="Round"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Opacity="0"
                                  RenderTransformOrigin="0.5,0.5"
                                  RenderTransform="scale(0.9)">
                                <Path.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.14" />
                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.14" />
                                    </Transitions>
                                </Path.Transitions>
                            </Path>
                        </Grid>
                    </Border>

                    <ContentPresenter Grid.Column="2"
                                      Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      RecognizesAccessKey="True" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="CheckBox.Lumina:pointerover /template/ Border#Box">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
    </Style>

    <Style Selector="CheckBox.Lumina:focus /template/ Border#Box">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="CheckBox.Lumina:checked /template/ Border#Box">
        <Setter Property="Background" Value="{DynamicResource AccentGradient}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    </Style>

    <Style Selector="CheckBox.Lumina:checked /template/ Path#CheckGlyph">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="RenderTransform" Value="scale(1)" />
    </Style>

    <Style Selector="CheckBox.Lumina:disabled">
        <Setter Property="Opacity" Value="0.55" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>

    <!-- ToggleSwitch Style -->
    <Style Selector="ToggleSwitch.Lumina">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="56" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Template">
            <ControlTemplate TargetType="ToggleSwitch">
                <Grid>
                    <Border Name="Track"
                            Background="{DynamicResource BackgroundTertiary}"
                            BorderBrush="{DynamicResource BorderDefault}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource RadiusRound}"
                            Height="28"
                            VerticalAlignment="Center" />

                    <Grid Name="PART_MovingKnobs"
                          Width="24"
                          Height="24"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Margin="4,0,0,0"
                          RenderTransformOrigin="0.5,0.5"
                          RenderTransform="translate(0px,0px)">
                        <Grid.Transitions>
                            <Transitions>
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.18" />
                            </Transitions>
                        </Grid.Transitions>

                        <Border Name="Thumb"
                                CornerRadius="{StaticResource RadiusRound}"
                                Background="{StaticResource White}"
                                BorderBrush="#22000000"
                                BorderThickness="1" />
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="ToggleSwitch.Lumina:pointerover /template/ Border#Track">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
    </Style>

    <Style Selector="ToggleSwitch.Lumina:focus /template/ Border#Track">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="ToggleSwitch.Lumina:checked /template/ Border#Track">
        <Setter Property="Background" Value="{DynamicResource AccentGradient}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    </Style>

    <Style Selector="ToggleSwitch.Lumina:checked /template/ Grid#PART_MovingKnobs">
        <Setter Property="RenderTransform" Value="translate(24px,0px)" />
    </Style>

    <Style Selector="ToggleSwitch.Lumina:checked /template/ Border#Thumb">
        <Setter Property="BorderBrush" Value="#14000000" />
    </Style>

    <Style Selector="ToggleSwitch.Lumina:checked:pointerover /template/ Border#Track">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentHoverBrush}" />
    </Style>

    <Style Selector="ToggleSwitch.Lumina:disabled">
        <Setter Property="Opacity" Value="0.55" />
        <Setter Property="Cursor" Value="Arrow" />
    </Style>

    <!-- Connection Button -->
    <Style Selector="Button.ConnectButton">
        <Setter Property="Width" Value="180" />
        <Setter Property="Height" Value="180" />
        <Setter Property="CornerRadius" Value="90" />
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="scale(1)" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.ConnectButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource CardGradientHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
        <Setter Property="RenderTransform" Value="scale(1.03)" />
    </Style>

    <Style Selector="Button.ConnectButton:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>

    <Style Selector="Button.ConnectButton.Connected">
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}" />
    </Style>

    <Style Selector="Button.ConnectButton.Connecting">
        <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}" />
    </Style>

    <Style Selector="Button.ConnectButton:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderFocus}" />
    </Style>

    <Style Selector="Button.ConnectButton.Connected:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}" />
    </Style>

    <Style Selector="Button.ConnectButton.Connecting:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource WarningBrush}" />
    </Style>

    <!-- Server List Item -->
    <Style Selector="Border.ServerItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform" Value="translate(0px,0px)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.18" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.ServerItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="RenderTransform" Value="translate(0px,-1px)" />
    </Style>

    <!-- Window Control Button -->
    <Style Selector="Button.WindowControlButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextMuted}" />
        <Setter Property="Width" Value="46" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.WindowControlButton:pointerover">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
    </Style>

    <Style Selector="Button.WindowControlButton:focus">
        <Setter Property="Background" Value="{DynamicResource BackgroundCard}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
    </Style>

    <Style Selector="Button.WindowControlButton.CloseButton:pointerover">
        <Setter Property="Background" Value="#E81123" />
        <Setter Property="Foreground" Value="White" />
    </Style>

</Styles>
