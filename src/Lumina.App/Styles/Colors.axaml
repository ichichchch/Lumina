<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Premium Magazine Aesthetic - Black/White/Gray Gradients -->

    <!-- Primary Dark Scale -->
    <Color x:Key="Gray950">#0A0A0B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray850">#151B2B</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray50">#F8FAFC</Color>
    <Color x:Key="White">#FFFFFF</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentPrimary">#3B82F6</Color>
    <Color x:Key="AccentPrimaryHover">#2563EB</Color>
    <Color x:Key="AccentSuccess">#22C55E</Color>
    <Color x:Key="AccentSuccessHover">#16A34A</Color>
    <Color x:Key="AccentWarning">#EAB308</Color>
    <Color x:Key="AccentError">#EF4444</Color>

    <!-- Connection State Colors -->
    <Color x:Key="StateDisconnected">#64748B</Color>
    <Color x:Key="StateConnecting">#EAB308</Color>
    <Color x:Key="StateConnected">#22C55E</Color>
    <Color x:Key="StateError">#EF4444</Color>

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="BackgroundPrimary" Color="{StaticResource Gray950}" />
            <SolidColorBrush x:Key="BackgroundSecondary" Color="{StaticResource Gray900}" />
            <SolidColorBrush x:Key="BackgroundTertiary" Color="{StaticResource Gray850}" />
            <SolidColorBrush x:Key="BackgroundCard" Color="{StaticResource Gray800}" />
            <SolidColorBrush x:Key="BackgroundCardHover" Color="{StaticResource Gray700}" />

            <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource White}" />
            <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource Gray300}" />
            <SolidColorBrush x:Key="TextMuted" Color="{StaticResource Gray500}" />
            <SolidColorBrush x:Key="TextDisabled" Color="{StaticResource Gray600}" />

            <SolidColorBrush x:Key="BorderDefault" Color="{StaticResource Gray700}" />
            <SolidColorBrush x:Key="BorderHover" Color="{StaticResource Gray600}" />
            <SolidColorBrush x:Key="BorderFocus" Color="{StaticResource AccentPrimary}" />

            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentPrimary}" />
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentPrimaryHover}" />
            <LinearGradientBrush x:Key="SuccessBrush" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#3B82F6" Offset="0" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource AccentWarning}" />
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource AccentError}" />

            <SolidColorBrush x:Key="StateDisconnectedBrush" Color="{StaticResource StateDisconnected}" />
            <SolidColorBrush x:Key="StateConnectingBrush" Color="{StaticResource StateConnecting}" />
            <LinearGradientBrush x:Key="StateConnectedBrush" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#3B82F6" Offset="0" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>
            <SolidColorBrush x:Key="StateErrorBrush" Color="{StaticResource StateError}" />

            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="{StaticResource Gray950}" Offset="0" />
                <GradientStop Color="#0B1020" Offset="0.55" />
                <GradientStop Color="{StaticResource Gray900}" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="CardGradient" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#1B2340" Offset="0" />
                <GradientStop Color="{StaticResource Gray800}" Offset="0.55" />
                <GradientStop Color="{StaticResource Gray850}" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="CardGradientHover" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#243055" Offset="0" />
                <GradientStop Color="{StaticResource Gray700}" Offset="0.6" />
                <GradientStop Color="{StaticResource Gray800}" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="AccentGradient" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#3B82F6" Offset="0" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="HeroBannerGradient" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#0B1220" Offset="0" />
                <GradientStop Color="#1E1B4B" Offset="0.55" />
                <GradientStop Color="#4C1D95" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="HeroBannerGradientHover" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#0E1730" Offset="0" />
                <GradientStop Color="#23206A" Offset="0.55" />
                <GradientStop Color="#5B21B6" Offset="1" />
            </LinearGradientBrush>

            <SolidColorBrush x:Key="HeroBannerBorderBrush" Color="#40FFFFFF" />
            <SolidColorBrush x:Key="HeroBannerBorderHoverBrush" Color="#5AFFFFFF" />
            <SolidColorBrush x:Key="HeroBannerBadgeBackground" Color="#1AFFFFFF" />
            <SolidColorBrush x:Key="HeroBannerBadgeBackgroundHover" Color="#26FFFFFF" />

            <RadialGradientBrush x:Key="AccentGlow" Center="70%,20%" GradientOrigin="70%,20%" RadiusX="90%" RadiusY="90%">
                <GradientStop Color="#223B82F6" Offset="0" />
                <GradientStop Color="#0013182A" Offset="0.7" />
                <GradientStop Color="#000A0A0B" Offset="1" />
            </RadialGradientBrush>

            <SolidColorBrush x:Key="GlassBackground" Color="#1A1E293B" />
            <SolidColorBrush x:Key="GlassBorder" Color="#33FFFFFF" />

            <BoxShadows x:Key="ShadowSmall">0 2 4 #24000000</BoxShadows>
            <BoxShadows x:Key="ShadowMedium">0 10 24 #30000000</BoxShadows>
            <BoxShadows x:Key="ShadowLarge">0 18 44 #3A000000</BoxShadows>
            <BoxShadows x:Key="ShadowGlowAccent">0 18 44 #1C3B82F6</BoxShadows>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="BackgroundPrimary" Color="{StaticResource Gray50}" />
            <SolidColorBrush x:Key="BackgroundSecondary" Color="{StaticResource White}" />
            <SolidColorBrush x:Key="BackgroundTertiary" Color="{StaticResource Gray100}" />
            <SolidColorBrush x:Key="BackgroundCard" Color="{StaticResource White}" />
            <SolidColorBrush x:Key="BackgroundCardHover" Color="{StaticResource Gray100}" />

            <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource Gray900}" />
            <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource Gray700}" />
            <SolidColorBrush x:Key="TextMuted" Color="{StaticResource Gray600}" />
            <SolidColorBrush x:Key="TextDisabled" Color="{StaticResource Gray500}" />

            <SolidColorBrush x:Key="BorderDefault" Color="{StaticResource Gray200}" />
            <SolidColorBrush x:Key="BorderHover" Color="{StaticResource Gray300}" />
            <SolidColorBrush x:Key="BorderFocus" Color="{StaticResource AccentPrimary}" />

            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentPrimary}" />
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentPrimaryHover}" />
            <LinearGradientBrush x:Key="SuccessBrush" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#3B82F6" Offset="0" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource AccentWarning}" />
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource AccentError}" />

            <SolidColorBrush x:Key="StateDisconnectedBrush" Color="{StaticResource StateDisconnected}" />
            <SolidColorBrush x:Key="StateConnectingBrush" Color="{StaticResource StateConnecting}" />
            <LinearGradientBrush x:Key="StateConnectedBrush" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#3B82F6" Offset="0" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>
            <SolidColorBrush x:Key="StateErrorBrush" Color="{StaticResource StateError}" />

            <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="{StaticResource Gray50}" Offset="0" />
                <GradientStop Color="{StaticResource White}" Offset="0.55" />
                <GradientStop Color="{StaticResource Gray100}" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="CardGradient" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="{StaticResource White}" Offset="0" />
                <GradientStop Color="{StaticResource Gray50}" Offset="0.55" />
                <GradientStop Color="{StaticResource Gray100}" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="CardGradientHover" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="{StaticResource White}" Offset="0" />
                <GradientStop Color="{StaticResource Gray100}" Offset="0.6" />
                <GradientStop Color="{StaticResource Gray200}" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="AccentGradient" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#3B82F6" Offset="0" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="HeroBannerGradient" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#0EA5E9" Offset="0" />
                <GradientStop Color="#6366F1" Offset="0.6" />
                <GradientStop Color="#A78BFA" Offset="1" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="HeroBannerGradientHover" StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Color="#0284C7" Offset="0" />
                <GradientStop Color="#4F46E5" Offset="0.6" />
                <GradientStop Color="#8B5CF6" Offset="1" />
            </LinearGradientBrush>

            <SolidColorBrush x:Key="HeroBannerBorderBrush" Color="#22000000" />
            <SolidColorBrush x:Key="HeroBannerBorderHoverBrush" Color="#33000000" />
            <SolidColorBrush x:Key="HeroBannerBadgeBackground" Color="#26FFFFFF" />
            <SolidColorBrush x:Key="HeroBannerBadgeBackgroundHover" Color="#33FFFFFF" />

            <RadialGradientBrush x:Key="AccentGlow" Center="70%,20%" GradientOrigin="70%,20%" RadiusX="90%" RadiusY="90%">
                <GradientStop Color="#143B82F6" Offset="0" />
                <GradientStop Color="#00FFFFFF" Offset="0.7" />
                <GradientStop Color="#00FFFFFF" Offset="1" />
            </RadialGradientBrush>

            <SolidColorBrush x:Key="GlassBackground" Color="#CCFFFFFF" />
            <SolidColorBrush x:Key="GlassBorder" Color="#22000000" />

            <BoxShadows x:Key="ShadowSmall">0 2 4 #14000000</BoxShadows>
            <BoxShadows x:Key="ShadowMedium">0 10 24 #1A000000</BoxShadows>
            <BoxShadows x:Key="ShadowLarge">0 18 44 #22000000</BoxShadows>
            <BoxShadows x:Key="ShadowGlowAccent">0 18 44 #143B82F6</BoxShadows>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!-- Corner Radius -->
    <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="RadiusXLarge">16</CornerRadius>
    <CornerRadius x:Key="RadiusRound">9999</CornerRadius>

    <!-- Spacing -->
    <Thickness x:Key="SpacingXSmall">4</Thickness>
    <Thickness x:Key="SpacingSmall">8</Thickness>
    <Thickness x:Key="SpacingMedium">16</Thickness>
    <Thickness x:Key="SpacingLarge">24</Thickness>
    <Thickness x:Key="SpacingXLarge">32</Thickness>

</ResourceDictionary>
