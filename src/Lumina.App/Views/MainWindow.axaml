<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lumina.App.ViewModels"
        xmlns:views="using:Lumina.App.Views"
        xmlns:converters="using:Lumina.App.Converters"
        x:Class="Lumina.App.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Lumina"
        Width="1000"
        Height="680"
        MinWidth="800"
        MinHeight="600"
        Background="{DynamicResource BackgroundPrimary}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="40"
        SystemDecorations="Full">

    <Grid RowDefinitions="40,*">
        
        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="220,*,Auto">
            <!-- Drag regions are handled in code-behind via OnPointerPressed -->

            <Border Grid.ColumnSpan="3"
                    Background="{DynamicResource BackgroundSecondary}"
                    BorderBrush="{DynamicResource BorderDefault}"
                    BorderThickness="0,0,0,1" />

            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        Spacing="10"
                        Margin="16,0"
                        VerticalAlignment="Center">
                <Border Width="28" Height="28"
                        CornerRadius="14"
                        Background="{StaticResource AccentGradient}">
                    <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"
                              Width="16" Height="16"
                              Foreground="{StaticResource White}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                </Border>
                <StackPanel Spacing="0">
                    <TextBlock Text="{DynamicResource App_Name}" Classes="BodyStrong" />
                    <TextBlock Text="{Binding SelectedServerNameText}"
                               Classes="Caption" />
                </StackPanel>
            </StackPanel>

            <Border Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="10,6"
                    CornerRadius="999"
                    Background="{DynamicResource BackgroundTertiary}"
                    BorderBrush="{DynamicResource BorderDefault}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse Width="8" Height="8"
                             Classes="StatusDot"
                             Classes.Connected="{Binding IsConnected}"
                             Classes.Connecting="{Binding IsConnecting}"
                             Classes.Error="{Binding IsError}" />
                    <TextBlock Text="{Binding StatusText}" Classes="Caption" />
                </StackPanel>
            </Border>
            
            <!-- Window Controls (must be clickable) -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        Spacing="0"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center">
                <Button Classes="WindowControlButton" Click="MinimizeButton_Click" ToolTip.Tip="{DynamicResource TitleBar_Minimize}" AutomationProperties.Name="{DynamicResource TitleBar_Minimize}">
                    <PathIcon Data="M20 14H4v-2h16" Width="12" Height="12" />
                </Button>
                <Button Classes="WindowControlButton" Click="MaximizeButton_Click" ToolTip.Tip="{DynamicResource TitleBar_Maximize}" AutomationProperties.Name="{DynamicResource TitleBar_Maximize}">
                    <PathIcon Data="M4 4h16v16H4V4zm2 2v12h12V6H6z" Width="12" Height="12" />
                </Button>
                <Button Classes="WindowControlButton CloseButton" Click="CloseButton_Click" ToolTip.Tip="{DynamicResource TitleBar_Close}" AutomationProperties.Name="{DynamicResource TitleBar_Close}">
                    <PathIcon Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z" Width="12" Height="12" />
                </Button>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="1" ColumnDefinitions="220,*">
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0"
                Background="{DynamicResource BackgroundSecondary}"
                BorderBrush="{DynamicResource BorderDefault}"
                BorderThickness="0,0,1,0">
            <DockPanel LastChildFill="True">
                
                <!-- App Title -->
                <StackPanel DockPanel.Dock="Top" Margin="20,40,20,32">
                    <TextBlock Text="{DynamicResource App_Name}" 
                               Classes="Heading"
                               FontWeight="Bold" />
                    <TextBlock Text="{DynamicResource App_Subtitle}" 
                               Classes="Caption"
                               Margin="0,4,0,0" />
                </StackPanel>

                <!-- Connection Status at Bottom -->
                <Border DockPanel.Dock="Bottom"
                        Margin="12,0,12,20"
                        Padding="12"
                        Background="{DynamicResource CardGradient}"
                        BorderBrush="{DynamicResource BorderDefault}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusLarge}"
                        BoxShadow="{DynamicResource ShadowSmall}">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Width="8" Height="8"
                                     Classes="StatusDot"
                                     Classes.Connected="{Binding IsConnected}"
                                     Classes.Connecting="{Binding IsConnecting}"
                                     Classes.Error="{Binding IsError}" />
                            <TextBlock Text="{Binding StatusText}" 
                                       Classes="BodyStrong" />
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedServerNameText}"
                                   Classes="Caption" />
                    </StackPanel>
                </Border>
                
                <StackPanel Spacing="4" Margin="12,0">
                    <Button Classes="NavItem"
                            Classes.Active="{Binding CurrentPage, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=Home}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Home">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" 
                                      Width="20" Height="20" />
                    <TextBlock Text="{DynamicResource Nav_Home}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="NavItem"
                            Classes.Active="{Binding CurrentPage, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=Servers}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Servers">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" 
                                      Width="20" Height="20" />
                    <TextBlock Text="{DynamicResource Nav_Servers}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="NavItem"
                            Classes.Active="{Binding CurrentPage, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=Settings}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Settings">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="M19.14 12.94c.04-.31.06-.63.06-.94 0-.31-.02-.63-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.04.31-.06.63-.06.94s.02.63.06.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z" 
                                      Width="20" Height="20" />
                    <TextBlock Text="{DynamicResource Nav_Settings}" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{DynamicResource BackgroundGradient}">
            <Panel>
                <Border Background="{DynamicResource AccentGlow}" IsHitTestVisible="False" />
                <views:HomePage IsVisible="{Binding DataContext.CurrentPage, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=Home}" />
                <views:ServersPage IsVisible="{Binding DataContext.CurrentPage, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=Servers}" />
                <views:AddServerPage IsVisible="{Binding DataContext.CurrentPage, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=AddServer}" />
                <views:SettingsPage IsVisible="{Binding DataContext.CurrentPage, RelativeSource={RelativeSource AncestorType=Window}, Converter={x:Static converters:StringEqualsConverter.Instance}, ConverterParameter=Settings}" />
            </Panel>
        </Border>

        </Grid>
    </Grid>

</Window>
