<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Lumina.App.ViewModels"
        xmlns:views="using:Lumina.App.Views"
        x:Class="Lumina.App.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Lumina"
        Width="1000"
        Height="680"
        MinWidth="800"
        MinHeight="600"
        Background="{StaticResource BackgroundPrimary}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        SystemDecorations="Full">

    <Grid ColumnDefinitions="220,*">
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0"
                Background="{StaticResource BackgroundSecondary}"
                BorderBrush="{StaticResource BorderDefault}"
                BorderThickness="0,0,1,0">
            <DockPanel>
                
                <!-- App Title -->
                <StackPanel DockPanel.Dock="Top" Margin="20,40,20,32">
                    <TextBlock Text="Lumina" 
                               Classes="Heading"
                               FontWeight="Bold" />
                    <TextBlock Text="VPN Client" 
                               Classes="Caption"
                               Margin="0,4,0,0" />
                </StackPanel>

                <!-- Navigation Items -->
                <StackPanel Spacing="4" Margin="12,0">
                    <Button Classes="NavItem"
                            Classes.Active="{Binding CurrentPage, Converter={x:Static StringConverters.IsNotNullOrEmpty}, ConverterParameter=Home}"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Home">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" 
                                      Width="20" Height="20" />
                            <TextBlock Text="Home" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="NavItem"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Servers">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" 
                                      Width="20" Height="20" />
                            <TextBlock Text="Servers" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Button Classes="NavItem"
                            Command="{Binding NavigateToCommand}"
                            CommandParameter="Settings">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <PathIcon Data="M19.14 12.94c.04-.31.06-.63.06-.94 0-.31-.02-.63-.06-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94l-.36-2.54c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.04.31-.06.63-.06.94s.02.63.06.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z" 
                                      Width="20" Height="20" />
                            <TextBlock Text="Settings" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Connection Status at Bottom -->
                <Border DockPanel.Dock="Bottom" 
                        Margin="12,0,12,20"
                        Padding="12"
                        Background="{StaticResource BackgroundCard}"
                        CornerRadius="{StaticResource RadiusMedium}">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Ellipse Width="8" Height="8"
                                     Fill="{StaticResource TextMuted}" />
                            <TextBlock Text="{Binding StatusText}" 
                                       Classes="BodyStrong" />
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedConfiguration.Name, FallbackValue='No server selected'}"
                                   Classes="Caption" />
                    </StackPanel>
                </Border>
                
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundPrimary}">
            <ContentControl Content="{Binding CurrentPage}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <views:HomePage />
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Border>

    </Grid>

</Window>
